{{ .Scratch.Add "index" slice }}
{{ range (where .Site.RegularPages "Type" "posts") }}
    {{ $.Scratch.Add "index" (dict "title" .Title "content" (.Summary | plainify) "date" (.Date | dateFormat "2 Jan 2006") "permalink" .Permalink "image" ( .Params.Image | replaceRE "images" "generated/full" | replaceRE ".jpg|.jpeg|.JPG|.JPEG|.png|.PNG" ".webp" | absURL )) }}
{{ end }}
{{ $.Scratch.Get "index" | jsonify }}